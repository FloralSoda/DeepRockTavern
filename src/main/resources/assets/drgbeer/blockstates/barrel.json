{
  "multipart": [
    {
      "when": {"facing": "up"},
      "apply": {"model": "drgbeer:blocks/barrel"}
    },
    {
      "when": {"facing": "down"},
      "apply": {
        "model": "drgbeer:blocks/barrel",
        "x": 180
      }
    },
    {
      "when": {"facing":  "north"},
      "apply": {
        "model":  "drgbeer:blocks/barrel",
        "x": 90
      }
    },
    {
      "when": {"facing": "east"},
      "apply": {
        "model": "drgbeer:blocks/barrel",
        "x": 90,
        "y": 90
      }
    },
    {
      "when": {"facing": "south"},
      "apply": {
        "model": "drgbeer:blocks/barrel",
        "x": -90
      }
    },
    {
      "when": {"facing": "west"},
      "apply": {
        "model": "drgbeer:blocks/barrel",
        "x": 90,
        "y": -90
      }
    }
  ]
}